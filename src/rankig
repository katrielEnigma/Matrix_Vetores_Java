public class RankingNotas {
    public static void main(String[] args) {
        String[] alunos = {"Ana", "Bruno", "Carla", "Daniel", "Ester"};
        double[][] notas = {
            {7.5, 8.0},
            {6.0, 7.0},
            {9.0, 8.5},
            {5.5, 6.5},
            {8.0, 9.0}
        };

        for (int i = 0; i < 5; i++) {
            double media = (notas[i][0] + notas[i][1]) / 2;
            System.out.println(alunos[i] + ": " + media);
        }
    }
}
